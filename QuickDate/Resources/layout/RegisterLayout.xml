<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/backgroundimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/Login_Image"
            android:scaleType="centerCrop" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/accent_transparent" />
    </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:theme="@style/ToolbarTheme"
        android:layout_marginStart="8dp">
	</android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
		android:paddingTop="0dp"
		 android:paddingEnd="25dp"
        android:paddingStart="25dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/logoimage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/Dialog_heart"
                    android:scaleType="centerCrop" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayout"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">
                    <EditText
                        android:id="@+id/edt_firstname"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textColor="#ffff"
                        android:theme="@style/DefaultEditText"
                        android:hint="@string/Lbl_FirstName"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayout"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">
                    <EditText
                        android:id="@+id/edt_lastname"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textColor="#ffff"
                        android:theme="@style/DefaultEditText"
                        android:hint="@string/Lbl_LastName"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayout"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">
                    <EditText
                        android:id="@+id/edt_email"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textColor="#ffff"
                        android:theme="@style/DefaultEditText"
                        android:hint="@string/Lbl_Email"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayout"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">
                    <EditText
                        android:id="@+id/edt_username"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#ffff"
                        android:theme="@style/DefaultEditText"
                        android:hint="@string/Lbl_Username"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayout"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:theme="@style/TextLabel">
                    <EditText
                        android:id="@+id/edt_password"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#ffff"
                        android:theme="@style/DefaultEditText"
                        android:hint="@string/Lbl_Password"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayout"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:theme="@style/TextLabel">
                    <EditText
                        android:id="@+id/edt_Confirmpassword"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#ffff"
                        android:theme="@style/DefaultEditText"
                        android:hint="@string/Lbl_ConfirmPassword"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>
				 <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayout"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">
                    <EditText
                        android:id="@+id/edt_gender"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textColor="#ffff"
                        android:theme="@style/DefaultEditText"
                        android:hint="@string/Lbl_Gender"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        android:visibility="invisible"
                        android:gravity="center_horizontal"
                        android:progressTint="#ffffffff" />
                    <Button
                        android:background="@drawable/shape_radius_white_btn"
                        android:layout_height="45dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="18dp"
                        android:padding="12dp"
                        style="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="@string/Lbl_Create_An_Account"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:textAllCaps="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:id="@+id/SignInButton" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/termsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/termstext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:text="@string/Lbl_By_registering_you_agree_to_our"
                        android:textColor="#ffff"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:text="@string/Lbl_Terms_of_service"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="#ffff"
                        android:textSize="11sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/SignLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/SignBigText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:text="@string/Lbl_Already_Have_an_Account"
                        android:textColor="#ffff"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/Sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:text="@string/Lbl_SignIn"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="#ffff"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>