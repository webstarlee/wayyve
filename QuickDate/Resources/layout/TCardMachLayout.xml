
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f7f7f7"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="@drawable/linear_gradient_drawable">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/coinImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:src="@drawable/speedometer"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/toolbartitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/Lbl_Find_Match"
                    android:padding="0dp"
                    android:textColor="@color/TextColorToolBar"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerInParent="true" />
                <ImageView
                  android:id="@+id/Filterbutton"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:layout_centerVertical="true"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="16dp"
                  android:src="@drawable/ic_filter"
                  android:tint="@color/TextColorToolBar" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
		android:id="@+id/CardViewBig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:clipToPadding="false"
        android:clipChildren="false">
        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/activity_main_card_stack_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:clipToPadding="false"
            app:visibleCount="10"
            app:swipeThreshold="0.75"
            app:translationDiff="8"
            app:scaleDiff="0.02"
            app:stackFrom="top"
			android:elevation="2dp"
            android:layout_marginBottom="105dp"
            android:layout_marginTop="45dp"
            app:elevationEnabled="true"
            app:swipeEnabled="true"
            app:leftOverlay="@layout/overlay_left"
            app:rightOverlay="@layout/overlay_right"
            app:swipeDirection="freedom_no_bottom"
            android:layout_centerHorizontal="true"
		    android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/userImageView"
            android:scaleType="centerCrop"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:focusable="false"
			android:tint="#ffff" 
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:src="@drawable/RemoteIcon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="0dp"
            android:layout_gravity="center" />
        <ViewStub
            android:id="@+id/viewStub"
            android:inflatedId="@+id/subView"
            android:layout_marginTop="45dp"
            android:layout="@layout/EmptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp" 
        android:gravity="center"> 
        <at.markushi.ui.CircleButton
            android:id="@+id/closebutton1" 
            android:layout_width="75dip"
            android:layout_height="75dip"
            app:cb_color="#685EF6"
            app:cb_pressedRingWidth="8dip"
            android:src="@drawable/ic_close_padded"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:tint="#fff"
            android:elevation="10dp"
            android:fadeScrollbars="false"
            android:clickable="false"
            android:layout_centerHorizontal="true" />
		 <at.markushi.ui.CircleButton
            android:id="@+id/Undobutton1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cb_color="#fff"
            android:elevation="5dp"
            android:layout_centerInParent="true"
            app:cb_pressedRingWidth="3dip"
            android:src="@drawable/ic_action_undo"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp" 
            android:tint="#666" />
        <at.markushi.ui.CircleButton
          android:id="@+id/likebutton2"
            android:layout_width="75dip"
            android:layout_height="75dip"
            app:cb_color="#f44336"
            android:elevation="10dp"
            app:cb_pressedRingWidth="8dip"
            android:src="@drawable/ic_action_like"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:tint="#fff"
            android:foregroundGravity="right" />
    </LinearLayout>

</RelativeLayout>