<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:theme="@style/ToolbarTheme"
        android:layout_gravity="top"
        app:layout_collapseMode="pin"
        android:elevation="2dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:background="@drawable/linear_gradient_drawable" />
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollingCache="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/InviteFriends" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_ShareTheLove"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#37474F" />
            <TextView
                android:id="@+id/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share the QuickDate by inviting your friends using these"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="#757575" />
            <View
                android:layout_width="0dp"
                android:layout_height="5dp" />
            <RelativeLayout
                android:id="@+id/copyLayouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:gravity="start"
                android:padding="5dp">
                <RelativeLayout
                    android:id="@+id/copyimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/circleCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444"
                        android:text="T"
                        android:layout_centerInParent="true"
                        android:textSize="60sp" />
                    <TextView
                        android:id="@+id/IconCopy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_above="@id/circleCopy"
                        android:layout_alignBottom="@id/circleCopy"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#ffff"
                        android:gravity="center|center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginStart="5dp" />
                </RelativeLayout>
                <TextView
                    android:layout_toEndOf="@+id/copyimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/Lbl_CopeLinkToProfile"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <TextView
					android:id="@+id/iconGo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:text="&gt;"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="20sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/textLayouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:gravity="start"
                android:padding="5dp">
                <RelativeLayout
                    android:id="@+id/textInviteimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/circleTextInvite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444"
                        android:text="T"
                        android:layout_centerInParent="true"
                        android:textSize="60sp" />
                    <TextView
                        android:id="@+id/IconTextInvite"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_above="@id/circleTextInvite"
                        android:layout_alignBottom="@id/circleTextInvite"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#ffff"
                        android:gravity="center|center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginStart="5dp" />
                </RelativeLayout>
                <TextView
                    android:layout_toEndOf="@+id/textInviteimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/Lbl_TextInvite"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <TextView
					android:id="@+id/iconGo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:text="&gt;"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="20sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/socialLayouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:gravity="start"
                android:padding="5dp">
                <RelativeLayout
                    android:id="@+id/socialInviteimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/circleSocialInvite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444"
                        android:text="T"
                        android:layout_centerInParent="true"
                        android:textSize="60sp" />
                    <TextView
                        android:id="@+id/IconSocialInvite"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_above="@id/circleSocialInvite"
                        android:layout_alignBottom="@id/circleSocialInvite"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#ffff"
                        android:gravity="center|center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginStart="5dp" />
                </RelativeLayout>
                <TextView
                    android:layout_toEndOf="@+id/socialInviteimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/Lbl_SocialMediaInvite"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <TextView
					android:id="@+id/iconGo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:text="&gt;"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="20sp" />
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="15dp" />
			<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
	        <com.google.android.gms.ads.AdView
				android:id="@+id/adView"
                app:adSize="BANNER"
                app:adUnitId="@string/banner_ad_unit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
		</RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>