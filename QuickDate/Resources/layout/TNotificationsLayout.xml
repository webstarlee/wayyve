<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:paddingBottom="5dp">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="#ffff"
            app:elevation="1dp"
            android:layout_marginBottom="0dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <LinearLayout
                    android:id="@+id/TabButtons"
                    app:layout_collapseMode="parallax"
                    android:layout_marginTop="37dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:weightSum="6"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/MatchesButton"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:tag="Clicked"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:layout_height="70dp">
                        <LinearLayout
                            android:background="@drawable/shape_radius_gradient_btn3"
                            android:id="@+id/bt1"
                            android:padding="5dp"
                            android:tag="Clicked"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerInParent="true">
                            <ImageView
                                android:id="@+id/ImageView1"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/Icon_two_hearts" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/text1"
                            android:layout_below="@+id/bt1"
                            android:layout_marginTop="1dp"
                            android:text="@string/Lbl_Matches"
                            android:textColor="#db2251"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/VisitsButton"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:tag="UnClicked"
                        android:elevation="2dp"
                        android:layout_height="70dp">
                        <LinearLayout
                            android:background="@drawable/shape_radius_line_grey"
                            android:id="@+id/bt2"
                            android:padding="5dp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerInParent="true">
                            <ImageView
                                android:id="@+id/ImageView2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerCrop"
                                android:tint="#A1A1A1"
                                android:src="@drawable/Icon_visits" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/text2"
                            android:layout_below="@+id/bt2"
                            android:layout_marginTop="1dp"
                            android:text="@string/Lbl_Visits"
                            android:textColor="#A1A1A1"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_width="1dp"
                            android:background="#efefef"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/LikesButton"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:tag="UnClicked"
                        android:elevation="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="70dp">
                        <LinearLayout
                            android:background="@drawable/shape_radius_line_grey"
                            android:id="@+id/bt3"
                            android:padding="6dp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerInParent="true">
                            <ImageView
                                android:id="@+id/ImageView3"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:scaleType="centerCrop"
                                android:tint="#A1A1A1"
                                android:src="@drawable/icon_likes" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_marginTop="1dp"
                            android:layout_below="@+id/bt3"
                            android:text="@string/Lbl_Likes"
                            android:textColor="#A1A1A1"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_width="1dp"
                            android:background="#efefef"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_collapseMode="pin"
                    android:background="@drawable/shape_gradient_normal3"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/Appname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="15"
                            android:text="@string/Lbl_Notifications"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:layout_gravity="start|center"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:layout_alignParentTop="false"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <android.support.v7.widget.RecyclerView
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:id="@+id/NotifcationRecyler"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="40dp" />
                <ViewStub
                    android:id="@+id/viewStub"
                    android:inflatedId="@+id/subView"
                    android:layout_marginTop="45dp"
                    android:layout="@layout/EmptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </RelativeLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>