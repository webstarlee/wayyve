<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/mainAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:longClickable="false"
        android:animationCache="true"
        android:duplicateParentState="true"
        android:filterTouchesWhenObscured="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/accent"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:collapsedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Collapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Expanded">
            <LinearLayout
                android:id="@+id/popularitystack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/popularityimage"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:backgroundTint="#00ffffff"
                    android:src="@drawable/speedometer" />
                <TextView
                    android:id="@+id/Appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_YourPopularity"
                    android:textColor="#fff"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/Appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_VeryLow"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="17sp" />
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/maintoolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:descendantFocusability="blocksDescendants"
                android:contentDescription="false"
                android:clickable="false"
                android:animationCache="false"
                android:keepScreenOn="false" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/Main_videos_Linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <!-- visits -->
            <RelativeLayout
                android:id="@+id/section1"
                android:background="#ffff"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/visitsimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/circle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:tint="#8e24aa" 
                        android:src="@drawable/Image_balck"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"  />
                    <ImageView
                        android:id="@+id/Iconimage"
                        android:layout_width="30dp"
                        android:tint="#ffff"
                        android:layout_marginTop="8dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/viewpager_target"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="30dp"
                        android:scaleType="centerCrop" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/visitsmain"
                    android:layout_toEndOf="@+id/visitsimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_VisitsMain"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <TextView
                    android:layout_below="@+id/visitsmain"
                    android:id="@+id/visitsCost"
                    android:layout_toEndOf="@+id/visitsimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_Credits"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <Button
                    android:layout_below="@+id/visitsCost"
                    android:id="@+id/visitsButton"
                    android:background="@drawable/shape_radius_gradient_btn3"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_VisitsCost"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:elevation="2dp" />
            </RelativeLayout>
            <!-- matches -->
            <RelativeLayout
                android:id="@+id/section1"
                android:background="#ffff"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/matchesimage"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                  <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="#3949ab"
                    android:src="@drawable/Image_balck"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"  />
                  <ImageView
                    android:id="@+id/Iconimage2"
                    android:layout_width="30dp"
                    android:tint="#ffff"
                    android:layout_marginTop="8dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="@drawable/viewpager_rocket"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="30dp"
                    android:scaleType="centerCrop" /> 
                </RelativeLayout>
                <TextView
                    android:id="@+id/matchesmain"
                    android:layout_toEndOf="@+id/matchesimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_MatchesMain"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <TextView
                    android:layout_below="@+id/matchesmain"
                    android:id="@+id/matchesCost"
                    android:layout_toEndOf="@+id/matchesimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_Credits"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <Button
                    android:layout_below="@+id/matchesCost"
                    android:id="@+id/matchesButton"
                    android:background="@drawable/shape_radius_gradient_btn2"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_MatchesCost"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:elevation="2dp" />
            </RelativeLayout>
            <!-- likes -->
            <RelativeLayout
                android:id="@+id/section1"
                android:background="#ffff"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/likesimage"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                  <ImageView
                    android:id="@+id/circle3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="#1E88E5"
                    android:src="@drawable/Image_balck"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"  />
                  <ImageView
                    android:id="@+id/Iconimage2"
                    android:layout_width="30dp"
                    android:tint="#ffff"
                    android:layout_marginTop="8dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="@drawable/viewpager_heart"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="30dp"
                    android:scaleType="centerCrop" /> 
                </RelativeLayout>
                <TextView
                    android:id="@+id/likesmain"
                    android:layout_toEndOf="@+id/likesimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_LikesMain"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <TextView
                    android:layout_below="@+id/likesmain"
                    android:id="@+id/likesCost"
                    android:layout_toEndOf="@+id/likesimage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_Credits"
                    android:textColor="#444"
                    android:textSize="14sp" />
                <Button
                    android:layout_below="@+id/likesCost"
                    android:id="@+id/likesButton"
                    android:background="@drawable/shape_radius_gradient_btn3"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_LikesCost"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:elevation="2dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>