<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/Shape_Radius_Gradient"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="40dp">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <RelativeLayout
                android:paddingTop="5dp"
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/headtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_Title_Match"
                    android:layout_marginTop="40dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffff" />
                <RelativeLayout
                    android:id="@+id/imagelayout"
                    android:paddingTop="5dp"
                    android:layout_below="@+id/headtitle"
                    android:layout_marginTop="9dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/Iconimage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/circlegradientWhitecenter"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="0dp"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/Dialog_heart"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:alpha=".80"
                        android:rotation="8"
                        android:src="@drawable/Dialog_heart"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_toStartOf="@+id/Iconimage"
                        android:layout_marginStart="2dp"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/Iconimage2"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:src="@drawable/circlegradientWhitecenter"
                        android:layout_below="@+id/headtitle"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="60dp"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/Dialog_heart"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:alpha=".75"
                        android:src="@drawable/Dialog_heart"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="45dp"
                        android:layout_toEndOf="@+id/Iconimage2"
                        android:layout_marginStart="2dp"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/Dialog_heart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:alpha=".75"
                        android:src="@drawable/Dialog_heart"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="45dp"
                        android:tint="#ffffff"
                        android:layout_alignBottom="@+id/Iconimage2"
                        android:layout_marginStart="-86dp"
                        android:scaleType="centerCrop" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/secondarytextview"
                    android:layout_below="@+id/imagelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_SubTitle_Match"
                    android:layout_marginTop="30dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffff" />
                <ImageView
                    android:id="@+id/Dialog_heart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/Dialog_heart"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentEnd="true"
                    android:tint="#CCf7f7f7"
                    android:alpha=".55"
                    android:rotation="30"
                    android:layout_alignBottom="@+id/Iconimage2"
                    android:layout_marginStart="7dp"
                    android:scaleType="centerCrop" />
                <Button
                    android:id="@+id/skippButton"
                    android:layout_below="@+id/secondarytextview"
                    android:background="@drawable/Shape_Radius_Line_White"
                    android:layout_height="42dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_NotNow"
                    android:textColor="#ffff"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/NextButton"
                    android:layout_below="@+id/skippButton"
                    android:background="@drawable/Shape_Radius_White_Btn"
                    android:layout_height="42dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_StartChat"
                    android:textColor="#444"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:elevation="2dp" />
                <ImageView
                    android:id="@+id/Dialog_heart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:alpha=".75"
                    android:src="@drawable/Dialog_heart"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="5dp"
                    android:rotation="320"
                    android:layout_marginStart="7dp"
                    android:scaleType="centerCrop" />
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>