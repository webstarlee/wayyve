<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="#ffff"
            app:elevation="1dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll">
                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:minHeight="250dp"
                        android:layout_height="355dp">
                        <android.support.v4.view.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="5dp"
                            app:ci_drawable="@drawable/white_radius"
                            app:ci_drawable_unselected="@drawable/black_radius" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/back"
						android:text="IC"
						android:textColor="#ffffff"
						android:textSize="40sp"
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:paddingBottom="16dp"
                        android:paddingTop="15dp" />
                </RelativeLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_marginTop="-13dp"
            android:background="@xml/rounded_corner"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@xml/rounded_corner"
                android:paddingBottom="20dp">
                <RelativeLayout
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:layout_marginStart="25dp" />
                    <TextView
                        android:id="@+id/iconOnline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="9dp"
                        android:text="O"
                        android:textSize="12sp"
                        android:textColor="#30db3c"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/Username" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:id="@+id/iconFavorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textSize="25sp"
							android:paddingStart="10dp"
							android:paddingEnd="10dp"
                            android:background="@drawable/custom_ripple_yellow"
                            android:textColor="#2c3e50"
                            android:layout_marginEnd="20dp" />
                        <TextView
                            android:id="@+id/iconMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
							android:paddingStart="10dp"
							android:paddingEnd="10dp"
                            android:textSize="25sp"
                            android:textColor="#2c3e50"
                            android:layout_marginEnd="5dp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/IconLocation"
                        android:layout_below="@+id/Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textColor="#F44336"
                        android:layout_marginStart="25dp" />
                    <TextView
                        android:id="@+id/LocationTextView"
                        android:layout_below="@+id/Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/IconLocation" />
                    <TextView
                        android:id="@+id/Description"
                        android:layout_below="@+id/Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:layout_marginTop="25dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="29dp"
                        android:paddingTop="15dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#595959"
                        android:textSize="15sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/workAndEducationLayout"
                    android:paddingTop="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/workAndEducationHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_WorkAndEducation"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:layout_marginStart="25dp" />
                    <TextView
                        android:id="@+id/DescriptionworkSection"
                        android:layout_below="@+id/workAndEducationHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:layout_marginTop="2dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="29dp"
                        android:paddingTop="3dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#595959"
                        android:textSize="15sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/intersetLayout"
                    android:paddingTop="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IntersetsHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_Interests"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:layout_marginStart="25dp" />
                    <TextView
                        android:id="@+id/DescriptionIntersetsSection"
                        android:layout_below="@+id/IntersetsHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:layout_marginTop="2dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="31dp"
                        android:paddingTop="3dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#595959"
                        android:textSize="15sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/languagesLayout"
                    android:paddingTop="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/LanguagesHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_Languages"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:layout_marginStart="25dp" />
                    <TextView
                        android:id="@+id/DescriptionLanguagesSection"
                        android:layout_below="@+id/LanguagesHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:layout_marginTop="2dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="29dp"
                        android:paddingTop="3dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#595959"
                        android:textSize="15sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/socialinfolayout"
                    android:paddingTop="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/SocialinfoHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_SocialInfo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:layout_marginStart="25dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="29dp"
                        android:paddingTop="3dp"
                        android:layout_below="@+id/SocialinfoHead"
                        android:gravity="start">
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/social1"
                            android:visibility="gone"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/google_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="G"
                            android:textColor="#DB4437" />
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/social2"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/social1"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/facebook_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="F"
                            android:textColor="#3B5998" />
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/social3"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/social2"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/twitter_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="T"
                            android:textColor="#1DA1F2" />
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/social4"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/social3"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/linkdin_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="LI"
                            android:textColor="#0077B5" />
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/social5"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/social4"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/Instagram_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="In"
                            android:textColor="#e4405f" />
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/website"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/social5"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/follow_button_profile_friends"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="W"
                            android:textColor="@color/accent" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:paddingTop="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="135dp">
                    <TextView
                        android:id="@+id/GiftsHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_Gifts"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:layout_marginStart="25dp" />
                    <View
                        android:id="@+id/shape"
                        android:layout_width="match_parent"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="60dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/Shape_Radius_Gradient"
                        android:layout_height="75dp" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/rose"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="0dp"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/gifttextview"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_SendGiftsAndChat"
                        android:layout_marginTop="0dp"
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:layout_marginStart="45dp" />
                    <Button
                        android:id="@+id/GiftButton"
                        android:layout_below="@+id/shape"
                        android:background="@drawable/Shape_Radius_White_Btn"
                        android:layout_height="28dp"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        style="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="@string/Lbl_SendGifts"
                        android:textColor="#444"
                        android:textSize="12sp"
                        android:clickable="true"
                        android:textAllCaps="false"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="-20dp"
                        android:gravity="center"
                        android:elevation="2dp" />
                </RelativeLayout>
              <View
                android:layout_width="match_parent"
                android:layout_height="50dp" /> 
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
    <RelativeLayout
		android:id="@+id/footerButtonSection"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@xml/framealfacolor"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <at.markushi.ui.CircleButton
            android:id="@+id/Chatbutton1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cb_color="#efefef"
            android:elevation="5dp"
            android:layout_centerInParent="true"
            app:cb_pressedRingWidth="3dip"
            android:src="@drawable/ic_chat_btn"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:tint="#666" />
        <at.markushi.ui.CircleButton
            android:id="@+id/likebutton2"
            android:layout_width="75dip"
            android:layout_height="75dip"
            app:cb_color="#f44336"
            app:cb_pressedRingWidth="8dip"
            android:src="@drawable/ic_action_like"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:tint="#fff"
            android:elevation="10dp"
            android:layout_toEndOf="@+id/Chatbutton1"
            android:fadeScrollbars="false"
            android:clickable="false"
            android:layout_centerHorizontal="true" />
        <at.markushi.ui.CircleButton
            android:id="@+id/closebutton1"
            android:layout_width="75dip"
            android:layout_height="75dip"
            app:cb_color="@color/primary"
            android:elevation="10dp"
            app:cb_pressedRingWidth="8dip"
            android:src="@drawable/ic_close_padded"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:tint="#fff"
            android:layout_toLeftOf="@+id/Chatbutton1"
            android:foregroundGravity="right" />
    </RelativeLayout>
</RelativeLayout>