<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="36dp"
        app:cardBackgroundColor="@android:color/white">
        <ImageView
            android:id="@+id/item_tourist_spot_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="profileimage"
            android:background="@drawable/white_radius"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/holder"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/Shape_Radius_Normal_White">
        <RelativeLayout
            android:id="@+id/MainWhiteBox"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_tourist_spot_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:textColor="#444"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/item_tourist_spot_card_name"
                android:textColor="#444"
                android:textSize="10sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/item_tourist_spot_card_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#444"
            android:textSize="13sp" />
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#efefef" />
</RelativeLayout>