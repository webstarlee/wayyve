<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="top"
	android:layout_alignParentTop="true"
	android:gravity="top"
	android:orientation="vertical"
	android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
		android:layout_gravity="top"
		android:layout_alignParentTop="true"
		android:gravity="top"
      
        android:paddingBottom="40dp"
        android:background="#ffff"
        android:layout_height="wrap_content">
		<RelativeLayout
		 	android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:layout_alignParentTop="true"
			android:gravity="top" >
			<View
				android:layout_gravity="top"
				android:layout_alignParentTop="true"
				android:gravity="top"
				android:layout_width="match_parent"
				android:layout_height="500dp"
				android:background="@drawable/shape_halfcircle" />
			<LinearLayout
				android:id="@+id/headerSection"
				android:weightSum="90"
				android:orientation="horizontal"
				android:layout_marginStart="15dp"
				android:layout_marginEnd="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<RelativeLayout
					android:orientation="horizontal"
					android:id="@+id/walletSection"
					android:layout_width="wrap_content"
					android:clickable="true"
					android:layout_marginTop="4dp"
					android:layout_weight="30"
					android:gravity="center_vertical"
					android:background="@drawable/shape_radius_btn"
					android:layout_height="30dp">
					<TextView
						android:id="@+id/walletnumber"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#ffff"
						android:layout_alignParentEnd="true"
						android:layout_marginEnd="8dp"
						android:text="203456440"
						android:gravity="start"
						android:layout_marginStart="5dp"
						android:textSize="14sp"
						android:layout_marginBottom="0dp" />
					<ImageView
						android:id="@+id/coinImageWallet"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:alpha=".90"
						android:src="@drawable/dollar"
						android:layout_marginEnd="5dp"
						android:layout_marginTop="0dp"
						android:layout_alignParentStart="true"
						android:layout_marginStart="5dp"
						android:scaleType="centerCrop" />
				</RelativeLayout>
				<RelativeLayout
					android:orientation="horizontal"
					android:id="@+id/popularitySection"
					android:layout_alignParentTop="true"
					android:layout_width="wrap_content"
					android:layout_marginStart="12dp"
					android:layout_weight="30"
					android:layout_marginTop="4dp"
					android:clickable="true"
					android:layout_centerHorizontal="true"
					android:gravity="center_vertical"
					android:background="@drawable/shape_radius_btn"
					android:layout_height="30dp">
					<TextView
						android:id="@+id/popularityText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#ffff"
						android:layout_alignParentEnd="true"
						android:layout_marginEnd="15dp"
						android:text="@string/Lbl_VeryLow"
						android:gravity="end"
						android:layout_marginStart="5dp"
						android:textSize="14sp"
						android:layout_marginBottom="0dp" />
					<ImageView
						android:id="@+id/coinImagePopularity"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:alpha=".90"
						android:src="@drawable/speedometer"
						android:layout_marginEnd="5dp"
						android:layout_marginTop="0dp"
						android:layout_alignParentStart="true"
						android:layout_marginStart="5dp"
						android:scaleType="centerCrop" />
				</RelativeLayout>
				<RelativeLayout
					android:orientation="horizontal"
					android:id="@+id/upgradeSection"
					android:layout_width="wrap_content"
					android:layout_weight="30"
					android:layout_marginStart="10dp"
					android:layout_marginTop="4dp"
					android:clickable="true"
					android:gravity="center_vertical"
					android:background="@drawable/shape_radius_btn"
					android:layout_height="30dp">
					<TextView
						android:id="@+id/upgradeText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#ffff"
						android:layout_alignParentEnd="true"
						android:layout_marginEnd="15dp"
						android:text="@string/Lbl_Upgrade"
						android:gravity="end"
						android:layout_marginStart="5dp"
						android:textSize="14sp"
						android:layout_marginBottom="0dp" />
					<ImageView
						android:id="@+id/coinImageUpgrade"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:alpha=".90"
						android:src="@drawable/diamond"
						android:layout_marginEnd="5dp"
						android:layout_marginTop="0dp"
						android:layout_alignParentStart="true"
						android:layout_marginStart="5dp"
						android:scaleType="centerCrop" />
				</RelativeLayout>
			</LinearLayout>
			<RelativeLayout
				android:id="@+id/imagelayout"
				android:paddingTop="3dp"
				android:layout_below="@+id/headtitle"
				android:layout_marginTop="2dp"
				android:layout_centerHorizontal="true"
				android:layout_width="match_parent"
				android:gravity="center"
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/Dialog_heart"
					android:layout_width="29dp"
					android:layout_height="29dp"
					android:alpha=".80"
					android:rotation="8"
					android:src="@drawable/Dialog_heart"
					android:layout_marginEnd="0dp"
					android:layout_marginTop="60dp"
					android:layout_toStartOf="@+id/Iconimage"
					android:layout_marginStart="50dp"
					android:scaleType="centerCrop" />
				<ImageView
					android:id="@+id/Iconimage2"
					android:layout_width="105dp"
					android:layout_height="105dp"
					android:layout_centerHorizontal="true"
					android:src="@drawable/no_profile_image_circle"
					android:layout_marginEnd="0dp"
					android:layout_marginTop="55dp"
					android:layout_marginStart="40dp"
					android:scaleType="centerCrop" />
				<ImageView
					android:id="@+id/Dialog_heart"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:alpha=".75"
					android:src="@drawable/Dialog_heart"
					android:layout_marginEnd="0dp"
					android:layout_marginTop="55dp"
					android:layout_toEndOf="@+id/Iconimage2"
					android:layout_marginStart="12dp"
					android:scaleType="centerCrop" />
				<ImageView
					android:id="@+id/Dialog_heart"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:alpha=".75"
					android:src="@drawable/Dialog_heart"
					android:layout_marginEnd="0dp"
					android:layout_marginTop="55dp"
					android:tint="#ffffff"
					android:layout_alignBottom="@+id/Iconimage2"
					android:layout_marginStart="-16dp"
					android:scaleType="centerCrop" />
				<TextView
					android:layout_below="@+id/Iconimage2"
					android:id="@+id/username"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="#ffff"
					android:gravity="center"
					android:layout_marginEnd="40dp"
					android:layout_marginTop="20dp"
					android:layout_marginStart="45dp"
					android:layout_centerHorizontal="true"
					android:textSize="16sp"
					android:layout_marginBottom="20dp" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/circleLayouts"
				android:layout_below="@+id/imagelayout"
				android:layout_marginTop="-20dp"
				android:layout_centerInParent="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<me.itangqi.waveloadingview.WaveLoadingView
					android:id="@+id/waveLoadingView"
					android:layout_width="65dp"
					android:layout_height="65dp"
					android:layout_marginTop="34dp"
					android:layout_centerHorizontal="true"
					app:wlv_borderColor="@color/primary"
					app:wlv_borderWidth="3dp"
					app:wlv_progressValue="0"
					app:wlv_shapeType="circle"
					app:wlv_round_rectangle="true"
					app:wlv_triangle_direction="north"
					app:wlv_waveAmplitude="50"
					app:wlv_waveColor="@color/accent" />
				<at.markushi.ui.CircleButton
					android:id="@+id/BoostButton"
					android:layout_marginTop="34dp"
					android:layout_width="65dp"
					android:layout_height="65dp"
					app:cb_color="@color/primary"
					android:layout_centerHorizontal="true"
					android:elevation="5dp"
					app:cb_pressedRingWidth="3dip"
					android:src="@drawable/ic_boost_btn"
					android:layout_marginEnd="10dp" />
				<TextView
					android:layout_below="@+id/BoostButton"
					android:id="@+id/tv_Boost"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_BoostMe"
					android:textColor="#444"
					android:gravity="center"
					android:layout_marginTop="3dp"
					android:layout_centerHorizontal="true"
					android:textSize="12sp" />
				<RelativeLayout
					android:layout_marginStart="65dp"
					android:layout_marginEnd="10dp"
					android:layout_marginTop="10dp"
					android:layout_toEndOf="@+id/BoostButton"
					android:gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<at.markushi.ui.CircleButton
						android:id="@+id/EditButton"
						android:layout_width="60dp"
						android:layout_height="60dp"
						app:cb_color="#efefef"
						android:elevation="5dp"
						app:cb_pressedRingWidth="3dip"
						android:src="@drawable/ic_edit_btn"
						android:tint="#666" />
					<TextView
						android:layout_below="@+id/EditButton"
						android:id="@+id/tv_Edit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Lbl_EditProfile"
						android:textAlignment="center"
						android:textColor="#444"
						android:layout_marginTop="3dp"
						android:textSize="12sp" />
				</RelativeLayout>
				<RelativeLayout
					android:layout_marginEnd="65dp"
					android:layout_marginTop="10dp"
					android:layout_marginStart="10dp"
					android:layout_toStartOf="@+id/Boost"
					android:gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<at.markushi.ui.CircleButton
						android:id="@+id/SettingsButton"
						android:layout_width="60dp"
						android:layout_height="60dp"
						app:cb_color="#efefef"
						android:elevation="5dp"
						app:cb_pressedRingWidth="3dip"
						android:src="@drawable/ic_settings_btn"
						android:tint="#666" />
					<TextView
						android:layout_below="@+id/SettingsButton"
						android:id="@+id/settingstextview"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Lbl_Settings"
						android:textColor="#444"
						android:layout_marginStart="4dp"
						android:textAlignment="center"
						android:layout_marginTop="3dp"
						android:textSize="12sp" />
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout
				android:layout_below="@+id/circleLayouts"
				android:id="@+id/StFirstLayout"
				android:layout_width="match_parent"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:layout_marginTop="15dp"
				android:padding="5dp"
				android:clickable="true"
				android:background="?attr/selectableItemBackground"
				android:paddingEnd="10dp"
				android:gravity="center_vertical"
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/StImage1"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/St_star"
					android:layout_marginEnd="10dp"
					android:layout_marginTop="0dp"
					android:layout_centerVertical="true"
					android:layout_alignParentStart="true"
					android:layout_marginStart="5dp"
					android:scaleType="centerCrop" />
				<TextView
					android:id="@+id/St_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#444"
					android:layout_toEndOf="@+id/StImage1"
					android:layout_marginEnd="15dp"
					android:text="@string/Lbl_Favorite"
					android:gravity="start"
					android:layout_marginStart="5dp"
					android:textSize="14sp"
					android:layout_marginBottom="0dp" />
				<TextView
					android:id="@+id/d_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#777"
					android:layout_toEndOf="@+id/StImage1"
					android:layout_marginEnd="15dp"
					android:layout_marginTop="25dp"
					android:text="@string/Lbl_DisplayAllFavorite"
					android:gravity="start"
					android:layout_marginStart="5dp"
					android:textSize="14sp"
					android:layout_marginBottom="0dp" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/StsecoundLayout"
				android:layout_below="@+id/StFirstLayout"
				android:layout_width="match_parent"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:layout_marginTop="15dp"
				android:padding="5dp"
				android:clickable="true"
				android:background="?attr/selectableItemBackground"
				android:gravity="center_vertical"
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/StImage2"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/St_add_user"
					android:layout_marginEnd="10dp"
					android:layout_marginTop="0dp"
					android:layout_centerVertical="true"
					android:layout_alignParentStart="true"
					android:layout_marginStart="5dp"
					android:scaleType="centerCrop" />
				<TextView
					android:id="@+id/St_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#444"
					android:layout_toEndOf="@+id/StImage2"
					android:layout_marginEnd="15dp"
					android:text="@string/Lbl_InviteFriends"
					android:gravity="start"
					android:layout_marginStart="5dp"
					android:textSize="14sp"
					android:layout_marginBottom="0dp" />
				<TextView
					android:id="@+id/d_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#777"
					android:layout_toEndOf="@+id/StImage2"
					android:layout_marginEnd="15dp"
					android:layout_marginTop="25dp"
					android:text="@string/Lbl_InviteFriendsToTheApp"
					android:gravity="start"
					android:layout_marginStart="5dp"
					android:textSize="14sp"
					android:layout_marginBottom="0dp" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/StthirdLayout"
				android:layout_below="@+id/StsecoundLayout"
				android:layout_width="match_parent"
				android:clickable="true"
				android:background="?attr/selectableItemBackground"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:layout_marginTop="15dp"
				android:padding="5dp"
				android:gravity="center_vertical"
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/StImage3"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/St_faq"
					android:layout_marginEnd="10dp"
					android:layout_marginTop="0dp"
					android:layout_centerVertical="true"
					android:layout_alignParentStart="true"
					android:layout_marginStart="5dp"
					android:scaleType="centerCrop" />
				<TextView
					android:id="@+id/St_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#444"
					android:layout_toEndOf="@+id/StImage3"
					android:layout_marginEnd="15dp"
					android:text="@string/Lbl_NeedHelp"
					android:gravity="start"
					android:layout_marginStart="5dp"
					android:textSize="14sp"
					android:layout_marginBottom="0dp" />
				<TextView
					android:id="@+id/d_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#777"
					android:layout_toEndOf="@+id/StImage3"
					android:layout_marginEnd="15dp"
					android:layout_marginTop="25dp"
					android:text="@string/Lbl_ContactUs_Privacy"
					android:gravity="start"
					android:layout_marginStart="5dp"
					android:textSize="14sp"
					android:layout_marginBottom="0dp" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/StfourthLayout"
				android:layout_below="@+id/StthirdLayout"
				android:layout_width="match_parent"
				android:clickable="true"
				android:background="?attr/selectableItemBackground"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:layout_marginTop="15dp"
				android:padding="5dp"
				android:gravity="center_vertical"
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/StImage4"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/St_Blogs"
					android:layout_marginEnd="10dp"
					android:layout_marginTop="0dp"
					android:layout_centerVertical="true"
					android:layout_alignParentStart="true"
					android:layout_marginStart="5dp"
					android:scaleType="centerCrop" />
				<TextView
					android:id="@+id/St_4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#444"
					android:layout_toEndOf="@+id/StImage4"
					android:layout_marginEnd="15dp"
					android:text="@string/Lbl_Blogs"
					android:gravity="start"
					android:layout_marginStart="5dp"
					android:textSize="14sp"
					android:layout_marginBottom="0dp" />
				<TextView
					android:id="@+id/d_4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#777"
					android:layout_toEndOf="@+id/StImage4"
					android:layout_marginEnd="15dp"
					android:layout_marginTop="25dp"
					android:text="@string/Lbl_ReadTheLatestArticles"
					android:gravity="start"
					android:layout_marginStart="5dp"
					android:textSize="14sp"
					android:layout_marginBottom="0dp" />
			</RelativeLayout> 
		
		  <View
				android:layout_below="@+id/StfourthLayout"
				android:layout_width="match_parent"
                android:layout_height="20dp" />
		
		</RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>