<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootChatWindowView"
    app:backgroundTint="#00000000">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="55dp" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="90dp"
        android:layout_height="match_parent"
        android:layoutDirection="ltr">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyler"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layoutDirection="ltr" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/firstLiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:minHeight="80dp">
        <FrameLayout
            android:id="@+id/TopFragmentHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_gravity="center"
            android:layout_centerVertical="false"
            android:layout_alignParentBottom="true"
            android:translationY="400dp" />
        <RelativeLayout
            android:id="@+id/chatBoxonButtom"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#ffff"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@id/swipeRefreshLayout"
            android:layoutDirection="ltr">
            <LinearLayout
                android:id="@+id/firstBoxonButtom"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="false"
                android:orientation="horizontal"
                android:background="#ffff"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/emojiicon"
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:src="@drawable/Smile"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp" />
                <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                    android:id="@+id/EmojiconEditText5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="6dp"
                    android:textSize="19dp"
                    android:hint="@string/Lbl_Write_your_message"
                    app:emojiconSize="23sp"
                    android:backgroundTint="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:maxLines="6"
                    android:layout_marginBottom="0dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="#ffff"
                android:gravity="center_vertical"
                android:id="@+id/attchmentseection">
                <at.markushi.ui.CircleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cb_color="#ffffffff"
                    app:cb_pressedRingWidth="9dip"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:src="@drawable/ImageAttach"
                    android:id="@+id/imageButton" />
                <at.markushi.ui.CircleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cb_color="#ffffffff"
                    app:cb_pressedRingWidth="9dip"
                    android:padding="4dp"
                    android:src="@drawable/stickerAttach"
                    android:id="@+id/stickerButton" />
                <at.markushi.ui.CircleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cb_color="#ffffffff"
                    app:cb_pressedRingWidth="9dip"
                    android:src="@drawable/giftAttach"
                    android:id="@+id/giftButton"
                    android:padding="10dp"
                    android:drawingCacheQuality="auto" />
                <!-- <at.markushi.ui.CircleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cb_color="#ffffffff"
                    app:cb_pressedRingWidth="9dip"
                    android:src="@drawable/contactAttach"
                    android:id="@+id/contactButton" /> -->
            </LinearLayout>
            <at.markushi.ui.CircleButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cb_color="@color/accent"
                app:cb_pressedRingWidth="13dip"
                android:src="@drawable/SendLetter"
                android:id="@+id/sendButton"
                android:translationY="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layoutDirection="ltr" />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/ButtomFragmentHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_gravity="center"
            android:layout_centerVertical="false"
            android:layout_alignParentBottom="true"
            android:translationY="400dp" />
    </LinearLayout>
</RelativeLayout>